<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/alibabalogo"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textAlignment="center"
        android:gravity="center_horizontal">
    </ImageView>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কিভাবে আলিবাবা অ্যাপস ইন্সটল করবেন"
            android:textColor="@color/white"
            android:layout_above="@id/btn2"
            android:textSize="15dp"
            android:background="@drawable/button"
            android:layout_centerInParent="true"
            android:layout_margin="1dp"

            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কিভাবে আলিবাবাতে একাউন্ট অপেন করবেন"
            android:layout_above="@id/btn3"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:background="@drawable/button"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/btn3"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কিয়াভবে পণ্য ক্রয় করবেন"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_above="@id/btn4"
            android:layout_centerInParent="true"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কিভাবে পেমেন্ট করবেন"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_above="@id/btn5"
            android:background="@drawable/button"
            android:layout_centerInParent="true"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কিভাবে পণ্য বাংলাদেশে নিয়ে আসবেন"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:background="@drawable/button"
            android:layout_centerInParent="true"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="যোগাযোগ করুন"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:background="@drawable/button"
            android:layout_centerInParent="true"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9034674558811370/2682632062">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>